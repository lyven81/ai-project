# Business Intelligence Agent - Environment Configuration
# Copy this file to .env and fill in your API keys

# ===================================
# REQUIRED: AI SERVICES
# ===================================

# Google Gemini API Key (Required)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# MODEL CONFIGURATION
# ===================================

# Gemini model selection
MODEL_NAME=gemini-2.0-flash-exp
TEMPERATURE=0.2
MAX_OUTPUT_TOKENS=8192

# Generation parameters
TOP_P=0.95
TOP_K=40

# ===================================
# DATASET CONFIGURATION
# ===================================

# File upload settings
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=csv,xlsx,tsv

# Data processing
MAX_ROWS_TO_ANALYZE=1000000
SAMPLE_SIZE_FOR_PREVIEW=5
MAX_UNIQUE_VALUES_TO_SHOW=20

# ===================================
# VISUALIZATION SETTINGS
# ===================================

# Matplotlib configuration
DEFAULT_FIGURE_WIDTH=10
DEFAULT_FIGURE_HEIGHT=6
DEFAULT_DPI=100

# Chart styles
CHART_STYLE=whitegrid
COLOR_PALETTE=viridis

# Font settings
TITLE_FONT_SIZE=14
LABEL_FONT_SIZE=12
TITLE_FONT_WEIGHT=bold

# ===================================
# CODE GENERATION SETTINGS
# ===================================

# Code structure requirements
REQUIRE_STATUS_VARIABLE=true
REQUIRE_ANSWER_TEXT=true
REQUIRE_ERROR_HANDLING=true

# Code safety
MAX_CODE_LENGTH=10000
EXECUTION_TIMEOUT_SECONDS=60

# ===================================
# ANALYSIS CONFIGURATION
# ===================================

# Numeric analysis
DECIMAL_PLACES=2
PERCENTAGE_DECIMAL_PLACES=1

# Statistical thresholds
CONFIDENCE_LEVEL=0.95
OUTLIER_THRESHOLD=3.0

# ===================================
# PERFORMANCE SETTINGS
# ===================================

# Memory management
MAX_MEMORY_USAGE_MB=2048
ENABLE_GARBAGE_COLLECTION=true

# Processing limits
MAX_CONCURRENT_ANALYSES=3
CACHE_SCHEMA_INFO=true

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false
SHOW_GENERATED_CODE=true
PRINT_EXECUTION_LOGS=true

# Development flags
ENABLE_PROFILING=false
SAVE_GENERATED_CODE=false

# ===================================
# OPTIONAL: ADDITIONAL FEATURES
# ===================================

# Export options (Optional)
# ENABLE_PDF_EXPORT=true
# ENABLE_HTML_EXPORT=true
# ENABLE_EXCEL_EXPORT=true

# Database integration (Optional)
# DATABASE_URL=postgresql://user:pass@localhost/dbname
# ENABLE_SQL_QUERIES=false

# Cloud storage (Optional)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# S3_BUCKET_NAME=your_bucket

# Analytics tracking (Optional)
# GA_TRACKING_ID=your_google_analytics_id
# MIXPANEL_TOKEN=your_mixpanel_token

# ===================================
# SECURITY SETTINGS
# ===================================

# Execution safety
ENABLE_SANDBOX=true
ALLOW_FILE_OPERATIONS=false
ALLOW_NETWORK_REQUESTS=false
WORK_ON_DATAFRAME_COPY=true

# Code validation
FORBIDDEN_IMPORTS=os,sys,subprocess,socket,requests
FORBIDDEN_FUNCTIONS=eval,exec,compile,__import__

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30
ENABLE_RATE_LIMITING=true

# ===================================
# ERROR HANDLING
# ===================================

# Error reporting
DETAILED_ERROR_MESSAGES=true
INCLUDE_STACK_TRACE=false
SUGGEST_FIXES=true

# Retry logic
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# ===================================
# SETUP INSTRUCTIONS
# ===================================
#
# 1. Copy this file to .env
# 2. Get your Gemini API key from https://aistudio.google.com/app/apikey
# 3. Replace 'your_gemini_api_key_here' with your actual key
# 4. Install dependencies: pip install -r requirements.txt
# 5. Upload your e-commerce dataset CSV
# 6. Start asking questions!
#
# Sample dataset columns:
# - Product_Name, Category, Quantity, Unit_Price
# - Total_Amount, Profit_Margin, Discount
# - Customer_ID, Age, Gender
# - Shipping_Cost, Delivery_Time, Region
# - Returned, Payment_Method
#
# Example questions:
# - "Which product category is making a loss because of discount?"
# - "What is the average lifetime value by age group?"
# - "Show me the top 10 cash cow products in a bar chart"
# - "Which factor is more likely to cause returns?"
# - "Compare profit margin across regions"
#
