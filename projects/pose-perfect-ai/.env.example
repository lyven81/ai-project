# Pose Perfect AI - Environment Configuration
# Copy this file to .env.local and fill in your API keys

# ===================================
# REQUIRED: AI SERVICES
# ===================================

# Google Gemini API Key (Required)
# Get your key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# COMPUTER VISION CONFIGURATION
# ===================================

# Camera and pose detection settings
VITE_CAMERA_FPS=30
VITE_CAMERA_RESOLUTION=1280x720
VITE_POSE_CONFIDENCE_THRESHOLD=0.7
VITE_ENABLE_MULTI_POSE=false

# Performance settings
VITE_WEBGL_ENABLED=true
VITE_USE_WEB_WORKERS=true
VITE_MAX_PROCESSING_THREADS=4

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Application settings
VITE_APP_NAME=Pose Perfect AI
VITE_NODE_ENV=development

# Exercise and analysis settings
VITE_DEFAULT_EXERCISE_TYPE=squats
VITE_ANALYSIS_INTERVAL_MS=100
VITE_FEEDBACK_DELAY_MS=500

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Debug mode
VITE_DEBUG_MODE=false
VITE_SHOW_POSE_LANDMARKS=false
VITE_VERBOSE_LOGGING=false

# Development server
PORT=3000
HOST=localhost
HTTPS=true

# ===================================
# OPTIONAL: ADDITIONAL SERVICES
# ===================================

# MediaPipe settings (Optional customization)
# VITE_MEDIAPIPE_MODEL_PATH=/models/pose_landmarker.task

# Analytics (Optional)
# VITE_GA_TRACKING_ID=your_google_analytics_id

# Cloud storage for recordings (Optional)
# VITE_FIREBASE_CONFIG=your_firebase_config_json

# ===================================
# EXERCISE LIBRARY SETTINGS
# ===================================

# Exercise detection confidence thresholds
VITE_SQUAT_ANGLE_THRESHOLD=90
VITE_PUSHUP_DEPTH_THRESHOLD=0.8
VITE_PLANK_STABILITY_THRESHOLD=5

# Form analysis settings
VITE_FORM_CHECK_INTERVAL=200
VITE_CORRECTION_COOLDOWN=2000

# ===================================
# SETUP INSTRUCTIONS
# ===================================
#
# 1. Copy this file to .env.local (not .env!)
# 2. Get your Gemini API key from https://ai.google.dev/
# 3. Replace 'your_gemini_api_key_here' with your actual key
# 4. Enable HTTPS for camera access (set HTTPS=true)
# 5. Restart the development server after making changes
# 6. Grant camera permissions when prompted
# 7. Never commit .env.local to version control!
#
# Note: This app requires HTTPS for camera access
# Use: npm run dev:https or similar HTTPS-enabled dev server
#