# Customer Segmentation and Market Agent - Environment Configuration
# Copy this file to .env and fill in your API keys

# ===================================
# REQUIRED: AI SERVICES
# ===================================

# Google Gemini API Key (Required)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# MODEL CONFIGURATION
# ===================================

# Gemini model selection
MODEL_NAME=gemini-2.0-flash-exp
TEMPERATURE=0.3
MAX_OUTPUT_TOKENS=8192

# Generation parameters
TOP_P=0.95
TOP_K=40

# ===================================
# CUSTOMER SEGMENTATION RULES
# ===================================

# VIP segment thresholds
VIP_MIN_SPENT=2000
VIP_MIN_ORDERS=5

# Regular segment thresholds
REGULAR_MIN_SPENT=500
REGULAR_MAX_SPENT=2000

# At-Risk customer definition
AT_RISK_DAYS_THRESHOLD=180

# Churned customer definition
CHURNED_DAYS_THRESHOLD=365

# New customer definition
NEW_CUSTOMER_MAX_ORDERS=2

# ===================================
# DATABASE CONFIGURATION
# ===================================

# TinyDB settings
DB_STORAGE=memory
DB_INDENT=2
DB_ENSURE_ASCII=false

# Table names
ORDERS_TABLE_NAME=orders
CUSTOMERS_TABLE_NAME=customers
CAMPAIGNS_TABLE_NAME=campaigns

# ===================================
# VISUALIZATION SETTINGS
# ===================================

# Matplotlib configuration
FIGURE_WIDTH=10
FIGURE_HEIGHT=6
CHART_STYLE=whitegrid

# Color schemes
VIP_COLOR=#FF6B6B
REGULAR_COLOR=#4ECDC4
AT_RISK_COLOR=#FFA500
NEW_COLOR=#95E1D3
CHURNED_COLOR=#808080

# ===================================
# PERFORMANCE SETTINGS
# ===================================

# Code execution limits
MAX_EXECUTION_TIME_SECONDS=30
MAX_CUSTOMERS_BATCH_SIZE=1000
MAX_CAMPAIGNS_PER_RUN=10

# Memory management
MAX_MEMORY_USAGE_MB=512

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false
SHOW_GENERATED_CODE=true

# Development flags
ENABLE_DATABASE_SNAPSHOTS=true
ENABLE_VISUALIZATION=true
SHOW_EXECUTION_LOGS=true

# ===================================
# OPTIONAL: ADDITIONAL FEATURES
# ===================================

# Email integration (Optional)
# SENDGRID_API_KEY=your_sendgrid_key
# FROM_EMAIL=campaigns@yourcompany.com

# CRM integration (Optional)
# SALESFORCE_API_KEY=your_salesforce_key
# HUBSPOT_API_KEY=your_hubspot_key

# Analytics (Optional)
# GA_TRACKING_ID=your_google_analytics_id

# ===================================
# SECURITY SETTINGS
# ===================================

# Execution safety
ENABLE_SANDBOX=true
ALLOW_FILE_OPERATIONS=false
ALLOW_NETWORK_REQUESTS=false

# Code generation safety
MAX_CODE_LENGTH=10000
FORBIDDEN_IMPORTS=os,sys,subprocess,eval,exec

# ===================================
# SETUP INSTRUCTIONS
# ===================================
#
# 1. Copy this file to .env
# 2. Get your Gemini API key from https://aistudio.google.com/app/apikey
# 3. Replace 'your_gemini_api_key_here' with your actual key
# 4. Install dependencies: pip install -r requirements.txt
# 5. Upload your e-commerce dataset CSV
# 6. Run the notebook and start asking questions!
#
# Required CSV columns:
# - Order_ID, Order_Date, Customer_Name
# - Category, Product_Name, Quantity, Unit_Price
# - Revenue, Profit, Region, City, State
#
# Sample questions to try:
# - "Who are our top 10 VIP customers?"
# - "Create a campaign targeting at-risk customers"
# - "What is the average order value by segment?"
# - "Which category has the most churned customers?"
#
